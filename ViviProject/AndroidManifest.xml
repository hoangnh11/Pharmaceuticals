        <activity android:name="com.viviproject.customerline.CreateCustormer" />
        <activity android:name="com.viviproject.customerline.MapActivity" />
        <activity android:name="com.viviproject.visit.VisitAcitvity" />
        <activity android:name="com.viviproject.visit.VisitDetailsActivity" />
        <activity android:name="com.viviproject.visit.PlaceOrderActivity" />
        <activity android:name="com.viviproject.visit.GiveGimic" />
