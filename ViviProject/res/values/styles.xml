<resources>

    <!--
        Base application theme, dependent on API level. This theme is replaced
        by AppBaseTheme from res/values-vXX/styles.xml on newer devices.
    -->
    <style name="AppBaseTheme" parent="@android:style/Theme.Holo.Light">
        <!--
            Theme customizations available in newer API levels can go in
            res/values-vXX/styles.xml, while customizations related to
            backward-compatibility can go here.
        -->
    </style>

    <!-- Application theme. -->
    <style name="AppTheme" parent="AppBaseTheme">

        <!-- All customizations that are NOT specific to a particular API-level can go here. -->
        <item name="android:fastScrollThumbDrawable">@drawable/scrollbar_vertical_thumb</item>
        <item name="android:fastScrollTrackDrawable">@drawable/scrollbar_vertical_track</item>
        <item name="android:windowNoTitle">true</item>
    </style>
    
    <!-- Normal List View -->
    <style name="NormalListView">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:headerDividersEnabled">true</item>
        <item name="android:footerDividersEnabled">false</item>
        <item name="android:divider">@drawable/list_division</item>
        <item name="android:layout_gravity">center</item>
        <item name="android:fastScrollEnabled">true</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>