<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical" >
    
    <include
        layout="@layout/header_layout"/>
    
    <LinearLayout 
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="15dp"
        android:paddingBottom="15dp"
        android:paddingLeft="@dimen/padding_body_screen"
        android:paddingRight="@dimen/padding_body_screen"
        android:orientation="vertical">
        
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            
            <ImageView 
                android:id="@+id/imgPharmaceAvata"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/pharmacer_avata"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="10dp"
                android:orientation="vertical">
                
                <TextView 
                    android:id="@+id/tvName"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:textColor="@color/BLACK"
                    android:text="Họ và tên: Trương Như Hổ"/>
                
                <TextView 
                    android:id="@+id/tvQualification"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/BLACK"
                    android:text="Trình độ học vấn: Dược sỹ trung cấp"/>
                
                <TextView 
                    android:id="@+id/tvWorkTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/BLACK"
                    android:text="Thời gian bắt đầu làm việc tại công ty: 01/08/2012"/>
                
                <TextView 
                    android:id="@+id/tvWorkPosition"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/BLACK"
                    android:text="Vị trí công việc: ASM Phòng: Trưởng nhóm đội Bạch Hổ"/>
                
                <TextView 
                    android:id="@+id/tvLifeOpinion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/BLACK"
                    android:text="Quan điểm sống: ghét sự giả dối, thích trung thực"/>
                
                <TextView 
                    android:id="@+id/tvCarrierOpinion"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="12sp"
                    android:textColor="@color/BLACK"
                    android:text="Quan điểm nghề nghiệp: thẳng thắn, khách quan"/>
            </LinearLayout>
        </LinearLayout>
        
        <!-- layout muc tieu cong viec -->
        <TextView
            android:id="@+id/tvMucTieuCongViec"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Mục tiêu công việc: Làm việc cống hiến vì sự phát triển và đưa thương hiệu, hình ảnh của công ty Thái Minh lên một tầm cao mới"
            android:textColor="@color/BLACK"
            android:textSize="12sp" />

         <!-- layout muc tieu cong viec -->
        <TextView
            android:id="@+id/tvLinkWeb"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:text="Link đến website:\n http://tmp.vn/our-people/le-van-minh"
            android:textColor="@color/BLACK"
            android:textSize="12sp" />
    </LinearLayout> <!-- layout body :END -->

</LinearLayout>
