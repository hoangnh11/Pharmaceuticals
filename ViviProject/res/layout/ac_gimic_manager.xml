<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical" >
    
    <include 
        layout="@layout/header_layout"/>
    
    <!-- layout body-->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="@dimen/padding_body_screen"
        android:orientation="vertical">
        
        <!-- gimic number -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:paddingBottom="10dp"
            android:orientation="vertical">
            
            <TextView 
                android:id="@+id/tvGimicNumberStatistic"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/BLACK"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Thống kê số lượng Gimic"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <TextView 
                    android:id="@+id/tvGimicStatisticTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:textColor="@color/TEXT_COLOR_SKYBLUE1"
                    android:text="Từ 15/3/2015 - 15/4/2015"/>
                
                <ImageView 
		            android:id="@+id/imgIconCalendar"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:padding="5dp"
		            android:background="@drawable/bg_img_calendar"
		            android:src="@drawable/ic_calenda_new"/>
            </LinearLayout>
            
            <!-- layout list statistic  -->
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/BLACK"/>
                <LinearLayout
                    android:id="@+id/linListStatisticHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF3D0"
                    android:weightSum="12"
                    android:orientation="horizontal">
                    
                    <TextView 
                        android:id="@+id/tvStatisticSTTTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK"
                        android:text="STT"/>
                    
                    <TextView 
                        android:id="@+id/tvStatisticProductTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="4"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK"
                        android:text="Mặt hàng"/>
                    
                    <TextView 
                        android:id="@+id/tvStatisticImportTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK"
                        android:text="Nhập"/>
                    
                    <TextView 
                        android:id="@+id/tvStatisticExportTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK"
                        android:text="Xuất"/>
                    
                    <TextView 
                        android:id="@+id/tvStatisticInventoryTitle"
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK"
                        android:text="Tồn"/>
                </LinearLayout>
                
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/BLACK"/>
                
                <ListView 
                    android:id="@+id/lvGimicStatistic"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/WHITE">
                </ListView>
            </LinearLayout>
        </LinearLayout> <!-- gimic number :END -->
        
        <!-- gimic list  -->
        <LinearLayout 
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:orientation="vertical">
            
            <TextView 
                android:id="@+id/tvGimicCustomerTitle"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:textColor="@color/BLACK"
                android:textSize="14sp"
                android:textStyle="bold"
                android:text="Danh sách KH nhận gimic"/>
            
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">
                
                <TextView 
                    android:id="@+id/tvGimicCustomerTime"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:textSize="13sp"
                    android:textColor="@color/TEXT_COLOR_SKYBLUE1"
                    android:text="Từ 15/3/2015 - 15/4/2015"/>
                
                <ImageView 
		            android:id="@+id/imgIconCalendarCusomer"
		            android:layout_width="wrap_content"
		            android:layout_height="wrap_content"
		            android:layout_marginLeft="10dp"
		            android:padding="5dp"
		            android:background="@drawable/bg_img_calendar"
		            android:src="@drawable/ic_calenda_new"/>
            </LinearLayout>
            
            <!-- layout list customer  -->
            <LinearLayout 
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="5dp"
                android:orientation="vertical">
                
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/BLACK"/>
                <LinearLayout
                    android:id="@+id/linListCustomerHeader"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="#FFF3D0"
                    android:weightSum="18"
                    android:orientation="horizontal">
                    
                    <TextView 
                        android:id="@+id/tvCustomerSTTTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK"
                        android:text="STT"/>
                    
                    <TextView 
                        android:id="@+id/tvCustomerDrugstoretTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="6"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK"
                        android:text="Nhà thuốc"/>
                    
                    <TextView 
                        android:id="@+id/tvCustomerPenTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK"
                        android:text="Bút"/>
                    
                    <TextView 
                        android:id="@+id/tvCustomerMagazineTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="2"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK"
                        android:text="Tạp chí"/>
                    
                    <TextView 
                        android:id="@+id/tvCustomerClockTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK"
                        android:text="Đồng hồ"/>
                    
                    <TextView 
                        android:id="@+id/tvCustomerWaterBottleTitle"
                        android:layout_width="0dp"
                        android:layout_height="match_parent"
                        android:layout_weight="3"
                        android:padding="5dp"
                        android:gravity="center"
                        android:textSize="14sp"
                        android:textStyle="bold"
                        android:textColor="@color/BLACK"
                        android:text="Bình nước"/>
                </LinearLayout>
                
                <View 
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:background="@color/BLACK"/>
                
                <ListView 
                    android:id="@+id/lvGimicCustomerList"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@color/WHITE">
                </ListView>
             </LinearLayout> <!-- layout list customer: END  -->   
        </LinearLayout> <!-- gimic list :END -->
    </LinearLayout> <!-- layout body: END-->"
</LinearLayout>
