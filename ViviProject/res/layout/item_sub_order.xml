<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:gravity="center_vertical" >

        <TextView
            android:id="@+id/tvDotOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:gravity="center"
            android:paddingRight="4dp"
            android:text="."
            android:textColor="@color/BLACK"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNameOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="4dp"
            android:text=""
            android:textColor="@color/BLACK"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvQuantityOne"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="140dp"
            android:background="@drawable/bg_minus_union"
            android:gravity="center"
            android:text=""
            android:textColor="@color/BLACK"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvDotTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="4dp"
            android:layout_marginLeft="12dp"
            android:layout_toLeftOf="@+id/tvNameTwo"
            android:paddingRight="4dp"
            android:text="."
            android:textColor="@color/BLACK"
            android:textSize="14dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvNameTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="12dp"
            android:layout_marginTop="4dp"
            android:layout_toLeftOf="@+id/tvQuantityTwo"
            android:gravity="center_vertical"
            android:text=""
            android:textColor="@color/BLACK"
            android:textSize="12dp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvQuantityTwo"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:background="@drawable/bg_minus_union"
            android:gravity="center"
            android:text=""
            android:textColor="@color/BLACK"
            android:textSize="12dp"
            android:textStyle="bold" />
    </RelativeLayout>

</LinearLayout>