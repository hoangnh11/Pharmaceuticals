<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginTop="8dp"
        android:orientation="horizontal"
        android:gravity="center_vertical" >

        <LinearLayout
            android:id="@+id/linColumOne"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginRight="60dp"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tvDotOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:gravity="center"
                android:paddingRight="4dp"
                android:text="."
                android:textColor="@color/BLACK"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNameOne"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:text=""              
                android:textColor="@color/BLACK"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQuantityOne"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"               
                android:background="@drawable/bg_white_quantity"
                android:gravity="center"
                android:text=""
                android:textColor="@color/BLACK"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/linColumTwo"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" >

            <TextView
                android:id="@+id/tvDotTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:paddingRight="4dp"
                android:text="."
                android:textColor="@color/BLACK"
                android:textSize="14dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvNameTwo"
                android:layout_width="220dp"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"             
                android:text=""
                android:textColor="@color/BLACK"
                android:textSize="12dp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/tvQuantityTwo"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/bg_white_quantity"
                android:gravity="center"
                android:text=""
                android:textColor="@color/BLACK"
                android:textSize="12dp"
                android:textStyle="bold" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>