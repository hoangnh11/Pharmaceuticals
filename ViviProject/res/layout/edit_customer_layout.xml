<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical" >

    <include layout="@layout/header_layout" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="8dp" >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:text="@string/PHARMACY_INFORMATION"
                android:textColor="@color/BLACK"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/PHARMACY_NAME"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtStoreName"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/PHARMACY_NAME_TWO_DOTS"
                    android:text="Nhà thuốc Quỳnh Lan"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/PHONE_NUMBER"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtStorePhone"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/PHONE_NUMBER_DETAILS"
                    android:inputType="phone"
                    android:singleLine="true"
                    android:text="043533000"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/ADDRESS_TWO_DOTS"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtStoreAddress"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/ADDRESS_TWO_DOTS"
                    android:text="117 Nguyễn Lương Bằng - Đ.Đa - HN"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="@string/LINE"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/T2"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/T3"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/T4"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/T5"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="15dp"
                    android:text="@string/T6"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="@string/T7"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:id="@+id/ckT2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="121dp" />

                <CheckBox
                    android:id="@+id/ckT3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/ckT4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/ckT5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/ckT6"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <CheckBox
                    android:id="@+id/ckT7"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="128dp"
                    android:layout_height="wrap_content"
                    android:text="@string/PERIOR"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/ONE_LAN"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/TWO_LAN"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/THREE_LAN"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginRight="8dp"
                    android:text="@string/FOUR_LAN"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="132dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp" />

                <CheckBox
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="18dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <Button
                    android:layout_width="110dp"
                    android:layout_height="24dp"
                    android:background="@drawable/bg_blue_gray"
                    android:gravity="center"
                    android:text="@string/REQUEST_CHANGE_LINE"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:text="@string/REQUEST_CHANGE_LINE_NOTE"
                    android:textColor="@color/BLACK"
                    android:textSize="10sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/VIP"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="@string/A"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/ckVipA"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/B"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/ckVipB"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="20dp"
                    android:text="@string/C"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />

                <CheckBox
                    android:id="@+id/ckVipC"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />
            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/OWNER_PHARMACY_INFORMATION"
                android:textColor="@color/BLACK"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/OWNER_PHARMACY_TWO_DOTS"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtNameOwner"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/PHARMACY_NAME_TWO_DOTS"
                    android:text="Đỗ Hồng Loan"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/BIRTHDAY"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spDay"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/bg_spinner_day"
                    android:gravity="center"
                    android:paddingRight="22dp"
                    android:prompt="@string/SELECT_DAY"
                    android:scrollbars="none" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="/"
                    android:textColor="@color/BLACK" />

                <Spinner
                    android:id="@+id/spMonth"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_spinner_day"
                    android:gravity="center"
                    android:paddingRight="22dp"
                    android:prompt="@string/SELECT_MONTH"
                    android:scrollbars="none" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="/"
                    android:textColor="@color/BLACK" />

                <Spinner
                    android:id="@+id/spYear"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_spinner_year"
                    android:gravity="center"
                    android:paddingRight="22dp"
                    android:prompt="@string/SELECT_YEAR"
                    android:scrollbars="none" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/PHONE_NUMBER"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtPhoneOwner"
                    android:layout_width="200dp"
                    android:inputType="phone"
                    android:layout_height="wrap_content"
                    android:hint="@string/PHARMACY_NAME_TWO_DOTS"
                    android:text="097.696.xxxx"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/NOTE"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtNoteOwner"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/PHARMACY_NAME_TWO_DOTS"
                    android:text="Sở thích nấu ăn, đi du lịch"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/BLANK"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_union" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:text="@string/ADD_OWNER_PHARMACY"
                    android:textColor="@color/TEXT_COLOR_SKYBLUE"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:layout_marginTop="4dp"
                android:background="@drawable/list_division" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="12dp"
                android:text="@string/SALER_INFORMATION"
                android:textColor="@color/BLACK"
                android:textSize="14sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/STAFF"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtNameStaff"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:hint="@string/PHARMACY_NAME_TWO_DOTS"
                    android:text="Đặng Hồng Minh"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/BIRTHDAY"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <Spinner
                    android:id="@+id/spDayStaff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="4dp"
                    android:background="@drawable/bg_spinner_day"
                    android:gravity="center"
                    android:paddingRight="22dp"
                    android:prompt="@string/SELECT_DAY"
                    android:scrollbars="none" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="/"
                    android:textColor="@color/BLACK" />

                <Spinner
                    android:id="@+id/spMonthStaff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_spinner_day"
                    android:gravity="center"
                    android:paddingRight="22dp"
                    android:prompt="@string/SELECT_MONTH"
                    android:scrollbars="none" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:text="/"
                    android:textColor="@color/BLACK" />

                <Spinner
                    android:id="@+id/spYearStaff"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:background="@drawable/bg_spinner_year"
                    android:gravity="center"
                    android:paddingRight="22dp"
                    android:prompt="@string/SELECT_YEAR"
                    android:scrollbars="none" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/PHONE_NUMBER"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <EditText
                    android:id="@+id/edtPhoneStaff"
                    android:layout_width="200dp"
                    android:layout_height="wrap_content"
                    android:inputType="phone"
                    android:hint="@string/PHARMACY_NAME_TWO_DOTS"
                    android:text="097.696.xxxx"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <TextView
                    android:layout_width="120dp"
                    android:layout_height="wrap_content"
                    android:text="@string/MARK"
                    android:textColor="@color/TEXT_COLOR_GREY"
                    android:textSize="14sp" />

                <EditText
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:gravity="center"
                    android:hint="@string/PHARMACY_NAME_TWO_DOTS"
                    android:text="6"
                    android:textColor="@color/BLACK"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/BLANK"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_union" />

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:paddingLeft="4dp"
                    android:text="@string/ADD_SALER"
                    android:textColor="@color/TEXT_COLOR_SKYBLUE"
                    android:textSize="14sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <Button
                android:id="@+id/btnUpdate"
                android:layout_width="88dp"
                android:layout_height="32dp"
                android:layout_marginTop="16dp"
                android:background="@drawable/bg_blue_gray"
                android:gravity="center"
                android:text="@string/UPDATE"
                android:textColor="@color/WHITE"
                android:textSize="14sp"
                android:textStyle="bold" />
        </LinearLayout>
    </ScrollView>

</LinearLayout>