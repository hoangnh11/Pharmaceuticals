<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical" >

    <include layout="@layout/header_layout" />

    <ScrollView
        android:id="@+id/scrollview"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fadingEdge="none"
        android:scrollbars="none" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:padding="8dp" >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical" >

                    <ImageView
                        android:id="@+id/imgAvata"
                        android:layout_width="80dp"
                        android:layout_height="80dp"
                        android:layout_gravity="center"
                        android:contentDescription="@string/BLANK"
                        android:padding="0dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/icon_avatar_blue" />

                    <LinearLayout
                        android:id="@+id/linEdit"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_blue_gray"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="4dp" >

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:paddingRight="4dp"
                            android:text="@string/EDIT"
                            android:textColor="@color/WHITE"
                            android:textSize="12sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_gravity="center"
                            android:contentDescription="@string/BLANK"
                            android:scaleType="fitXY"
                            android:src="@drawable/icon_edit" />
                    </LinearLayout>
                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="vertical"
                    android:paddingLeft="8dp" >

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="4dp" >

                        <TextView
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:text="@string/PHARMACY_NAME"
                            android:textColor="@color/GRAY88"
                            android:textSize="12sp" >
                        </TextView>

                        <TextView
                            android:id="@+id/tvNameStore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="Nhà thuốc Quỳnh Lan"
                            android:textColor="@color/BLACK"
                            android:textSize="12sp"
                            android:textStyle="bold" >
                        </TextView>

                        <TextView
                            android:id="@+id/tvCode"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="BD1001"
                            android:textColor="@color/GRAY88"
                            android:textSize="12sp" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="4dp" >

                        <TextView
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:text="@string/PHONE_NUMBER"
                            android:textColor="@color/GRAY88"
                            android:textSize="12sp" >
                        </TextView>

                        <TextView
                            android:id="@+id/tvPhoneStore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="043.533.xxxx"
                            android:textColor="@color/BLACK"
                            android:textSize="12sp"
                            android:textStyle="bold" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="4dp" >

                        <TextView
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:text="@string/ADDRESS"
                            android:textColor="@color/GRAY88"
                            android:textSize="12sp" >
                        </TextView>

                        <TextView
                            android:id="@+id/tvAddressStore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="117 Nguyễn Lương Bằng - Đ.Đa -HN"
                            android:textColor="@color/BLACK"
                            android:textSize="12sp"
                            android:textStyle="bold" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:paddingBottom="4dp" >

                        <TextView
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:text="@string/ACCUMULATION_POINT"
                            android:textColor="@color/GRAY88"
                            android:textSize="12sp" >
                        </TextView>

                        <TextView
                            android:id="@+id/tvActive"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text=""
                            android:textColor="@color/BLACK"
                            android:textSize="12sp"
                            android:textStyle="bold" >
                        </TextView>
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal" >

                        <TextView
                            android:layout_width="88dp"
                            android:layout_height="wrap_content"
                            android:text="@string/VIP"
                            android:textColor="@color/GRAY88"
                            android:textSize="12sp" >
                        </TextView>

                        <TextView
                            android:id="@+id/tvVipStore"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:text="A"
                            android:textColor="@color/BLACK"
                            android:textSize="12sp"
                            android:textStyle="bold" >
                        </TextView>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linOwnerPharmacy"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/BG_GRAY9E"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="16dp"
                    android:text="@string/OWNER_PHARMACY"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/BLANK"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_arrow_bottom" />
            </LinearLayout>

            <ListView
                android:id="@+id/lvOwner"
                style="@style/NormalListView"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/WHITE"
                android:fadingEdge="none"
                android:scrollbarSize="3dp" />

            <LinearLayout
                android:id="@+id/linSaler"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/BG_GRAY9E"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="16dp"
                    android:text="@string/SALER"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/BLANK"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_arrow_bottom" />
            </LinearLayout>

            <ListView
                android:id="@+id/lvSaler"
                style="@style/NormalListView"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/WHITE"
                android:fadingEdge="none"
                android:scrollbarSize="3dp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/BG_GRAY9E"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="16dp"
                    android:text="@string/PROFIT_SUM"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/tvTotalRevenue"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingRight="8dp"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp"
                    android:textStyle="bold" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linProfitThree"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/BLUE"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="16dp"
                    android:text="@string/PROFIT_THRE_AGO"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/BLANK"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_arrow_bottom" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linSubProfitThree"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:background="@color/BG_GRAY_LIGHT"
                android:paddingBottom="8dp"
                android:orientation="vertical"               
                android:visibility="gone" >

                <include layout="@layout/header_five_order" />

                <ListView
                    android:id="@+id/lvThreeOrder"
                    style="@style/NormalListViewNoDivider"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/WHITE"
                    android:fadingEdge="none"
                    android:scrollbarSize="3dp" />
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/BLACK" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linProfitFive"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginTop="8dp"
                android:background="@color/BLUE"
                android:gravity="center"
                android:orientation="horizontal"
                android:padding="8dp" >

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="8dp"
                    android:paddingRight="16dp"
                    android:text="@string/PROFIT_FIVE_ORDER"
                    android:textColor="@color/WHITE"
                    android:textSize="12sp"
                    android:textStyle="bold" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:contentDescription="@string/BLANK"
                    android:scaleType="fitXY"
                    android:src="@drawable/icon_arrow_bottom" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/linSubProfitFive"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:paddingBottom="8dp"
                android:background="@color/BG_GRAY_LIGHT"
                android:orientation="vertical"               
                android:visibility="gone" >

                <include layout="@layout/header_five_order" />

                <ListView
                    android:id="@+id/lvFiveOrder"
                    style="@style/NormalListViewNoDivider"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/WHITE"
                    android:fadingEdge="none"
                    android:scrollbarSize="3dp" />
                
                <View
                    android:layout_width="match_parent"
                    android:layout_height="0.5dp"
                    android:layout_marginLeft="8dp"
                    android:layout_marginRight="8dp"
                    android:background="@color/BLACK" />
            </LinearLayout>
        </LinearLayout>
    </ScrollView>

</LinearLayout>