<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/WHITE"
    android:orientation="vertical" >
    
	<include 
	    layout="@layout/header_layout"/>
	    
	<ScrollView
	    android:id="@+id/scrollViewCompany"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent">
	    
	    <LinearLayout 
	        android:id="@+id/linCompanyBody"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:paddingLeft="@dimen/padding_body_screen"
	        android:paddingRight="@dimen/padding_body_screen"
	        android:orientation="vertical">
	        
	        <RelativeLayout 
	            android:id="@+id/relCompanyTitle"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:layout_marginTop="@dimen/view_margin_top">
	            
				<TextView 
				    android:id="@+id/tvCompayName"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentLeft="true"
				    android:layout_alignParentTop="true"
				    android:gravity="start"
				    android:textStyle="bold"
				    android:textSize="15sp"
				    android:textColor="@color/BLACK"
				    android:text="Công ty cổ phần Dược Thái Minh"/>
				
				<ImageView 
				    android:id="@+id/imgCompanyLogo"
				    android:layout_width="wrap_content"
				    android:layout_height="wrap_content"
				    android:layout_alignParentRight="true"
				    android:layout_centerVertical="true"
				    android:layout_marginTop="5dp"
				    android:layout_marginBottom="5dp"
				    android:layout_alignBaseline="@+id/tvCompayName"
				    android:src="@drawable/logo_thai_minh_company"/>
				
				<!-- layout buton sumenh tam nhin -->
				<LinearLayout
				    android:id="@+id/linButonSuMenhTamNhin"
				    android:layout_width="150dp"
				    android:layout_height="wrap_content"
				    android:layout_alignParentBottom="true"
				    android:layout_alignParentLeft="true"
				    android:gravity="center_vertical"
				    android:background="@drawable/bg_button_expand_blue_press"
				    android:orientation="horizontal">
				    
				    <TextView 
					    android:id="@+id/tvSuMenhTamNhin"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_alignParentLeft="true"
					    android:layout_alignParentTop="true"
					    android:layout_marginLeft="5dp"
					    android:gravity="start"
					    android:textStyle="bold"
					    android:textSize="14sp"
					    android:textColor="@color/WHITE"
					    android:text="Sứ Mệnh - Tầm Nhìn"/>
				    
				    <LinearLayout 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal"
				        android:layout_marginRight="5dp"
				        android:paddingLeft="10dp"
				        android:gravity="right">
				        
				        <ImageView 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:src="@drawable/icon_arrow_bottom"/>
				    </LinearLayout>
				</LinearLayout>
	        </RelativeLayout>
	        
	        <ImageView 
	            android:id="@+id/imgSuMenhTamNhinBody"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:src="@drawable/su_menh"/>
	        
	        <!-- layout lich su phat trien -->
	        <LinearLayout 
	            android:id="@+id/linLichSuPhatTrienBody"
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginTop="10dp">
	            
	            <!-- layout buton Lich su phat trien -->
				<LinearLayout
				    android:id="@+id/linButonLichSuPhatTrien"
				    android:layout_width="150dp"
				    android:layout_height="wrap_content"
				    android:layout_alignParentBottom="true"
				    android:layout_alignParentLeft="true"
				    android:gravity="center_vertical"
				    android:background="@drawable/bg_button_expand_blue"
				    android:orientation="horizontal">
				    
				    <TextView 
					    android:id="@+id/tvLichSuPhatTrien"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_alignParentLeft="true"
					    android:layout_alignParentTop="true"
					    android:layout_marginLeft="5dp"
					    android:gravity="start"
					    android:textStyle="bold"
					    android:textSize="14sp"
					    android:textColor="@color/WHITE"
					    android:text="Lịch sử phát triển"/>
				    
				    <LinearLayout 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal"
				        android:layout_marginRight="5dp"
				        android:paddingLeft="10dp"
				        android:gravity="end">
				        
				        <ImageView 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:src="@drawable/icon_arrow_bottom"/>
				    </LinearLayout>
				</LinearLayout>
				
				<ImageView
				    android:id="@+id/imgLichSuPhatTrieBody"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:src="@drawable/su_menh" 
				    android:visibility="gone"/>
			</LinearLayout>
			
	        <!-- layout chien luc kinh doanh -->
	        <LinearLayout 
	            android:layout_width="match_parent"
	            android:layout_height="wrap_content"
	            android:orientation="vertical"
	            android:layout_marginTop="10dp">
	            
	            <!-- layout buton chien luoc kinh doanh -->
				<LinearLayout
				    android:id="@+id/linButonChienLuocKinhDoanh"
				    android:layout_width="150dp"
				    android:layout_height="wrap_content"
				    android:layout_alignParentBottom="true"
				    android:layout_alignParentLeft="true"
				    android:gravity="center_vertical"
				    android:background="@drawable/bg_button_expand_blue"
				    android:orientation="horizontal">
				    
				    <TextView 
					    android:id="@+id/tvChienLuocKinhDoanh"
					    android:layout_width="wrap_content"
					    android:layout_height="wrap_content"
					    android:layout_alignParentLeft="true"
					    android:layout_alignParentTop="true"
					    android:layout_marginLeft="5dp"
					    android:gravity="start"
					    android:textStyle="bold"
					    android:textSize="14sp"
					    android:textColor="@color/WHITE"
					    android:text="Chiến lược kinh doanh"/>
				    
				    <LinearLayout 
				        android:layout_width="match_parent"
				        android:layout_height="wrap_content"
				        android:orientation="horizontal"
				        android:layout_marginRight="5dp"
				        android:paddingLeft="10dp"
				        android:gravity="right">
				        
				        <ImageView 
				            android:layout_width="wrap_content"
				            android:layout_height="wrap_content"
				            android:src="@drawable/icon_arrow_bottom"/>
				    </LinearLayout>
				</LinearLayout>
				
				<ImageView
				    android:id="@+id/imgChienLuocKinhDoanh"
				    android:layout_width="match_parent"
				    android:layout_height="wrap_content"
				    android:src="@drawable/su_menh" 
				    android:visibility="gone"/>
			</LinearLayout>
	    </LinearLayout>
	</ScrollView>
</LinearLayout>
